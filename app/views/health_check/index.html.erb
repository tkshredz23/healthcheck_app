<div class='container'>
  <div class='content'>
    <h1>Status: <%= current_status.upcase %></h1>
    <h2> Status updates </h2>
    <ul class='list-group'>
      <% @latest_messages.each do |msg| %>
        <li class='list-group-item'>
          <%= msg.message %> <span class='badge'><%= msg.timestamp %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
